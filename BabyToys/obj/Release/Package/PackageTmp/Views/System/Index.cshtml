                                <tr>
                                    <th>Ảnh</th>
                                    <th>Tên ảnh</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (string file in Model)
                                {
                                    <tr class="item_row" style="border-color: #F0F0F0; border-style: Solid; height: 40px;">
                                        <td class="item_float">
                                            <img src="@file" height="70" width="250" />
                                        </td>
                                        <td class="item_float">@file</td>
                                        <td class="item_float">
                                            <a href="~/system/deleteimage/?name=@file"
