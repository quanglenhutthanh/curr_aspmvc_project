@{
    ViewBag.Title = "Quản lý phí vận chuyển";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@model IEnumerable<BabyToys.Models.TinhThanh>
<div id="content" class="span10">
    <!-- content starts -->
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="#">Home</a> <span class="divider">/</span>
            </li>
            <li>
                <a href="#">Danh sách phí vận chuyển - tỉnh thành</a>
            </li>
        </ul>
    </div>
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-content">
                <div class="row-fluid">
                    <div class="span12 form-inline">
                    </div>

                </div>
                <div class="row-fluid">
                    <div class="span4">
                        <a href="~/AdminPhiVanChuyen/ThemPhiVC" class="btn btn-large btn-success">
                            <i class="icon-plus icon-white"></i>
                            Thêm mới
                        </a>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tỉnh/ thành</th>
                        <th>Phí vận chuyển</th>
                        <th>Hành động</th>
                    </tr>
                    @foreach (var tinh in @Model)
                    {
                        <tr class="item_row" style="border-color: #F0F0F0; border-style: Solid; height: 40px;">
                            <td class="item_float">
                                <label>@tinh.IdTinhThanh</label>
                                </td>
                            <td class="item_float">
                                <label>@tinh.TenTinh</label>
                                </td>
                            <td class="item_float">
                                <label>@tinh.PhiVanChuyen</label>
                                </td>
                            <td>
                                <a href="~/AdminPhiVanChuyen/SuaPhiVC/@tinh.IdTinhThanh" class="btn btn-primary">
                                    <i class="icon-edit icon-white"></i>
                                    Sửa
                                </a>
                                 <a href="~/AdminPhiVanChuyen/XoaPhiVC/@tinh.IdTinhThanh" class="btn btn-success">Xóa</a>
                            </td>
                        </tr>
                    }
                </thead>
            </table>
        </div>
    </div>
</div>
