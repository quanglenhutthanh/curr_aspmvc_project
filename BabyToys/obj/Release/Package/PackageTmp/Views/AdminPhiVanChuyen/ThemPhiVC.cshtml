@{
    ViewBag.Title = "Thêm tỉnh thành";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@model BabyToys.Models.TinhThanh
@using (Html.BeginForm("ThemPhiVC", "AdminPhiVanChuyen", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="content" class="span10">
        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-content">
                    <div>
                        <ul class="breadcrumb">
                            <li>
                                <a href="#">Home</a> <span class="divider">/</span>
                            </li>
                            <li>
                                <a href="#">Sửa thông tin tỉnh</a>
                            </li>
                        </ul>
                    </div>

                    <div class="form-actions">
                        <input type="submit" name="luu" class="btn btn-primary" value="Lưu">
                        <a href="~/AdminPhiVanChuyen/QLPhiVanChuyen"  class="btn btn-inverse">Thoát</a>
                    </div>
                    <div>
                            <span class="error" style="color: red; font-size: 14px">
                                @Html.ValidationMessageFor(model => model.TenTinh)<br />
                                @Html.ValidationMessageFor(model => model.PhiVanChuyen)<br />
                            
                            </span>
                        </div>
                    <div class="row-fluid sortable">
                        <div class="box span12 form-horizontal" style="padding-top: 50px;">
                            <div class="control-group">
                                <label class="control-label" for="typeahead">Tên tỉnh thành</label>
                                <div class="controls">
                                    @Html.TextBoxFor(tinh => tinh.TenTinh)
                                    </div>
                                </div>
                            <div class="control-group">
                                <label class="control-label" for="typeahead">Phí vận chuyển</label>
                                <div class="controls">
                                    @Html.TextBoxFor(tinh => tinh.PhiVanChuyen)
                                 </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
}
