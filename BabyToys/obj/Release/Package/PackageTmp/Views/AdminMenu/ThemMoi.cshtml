@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<script src="~/ckeditor/ckeditor.js"></script>
<div id="content" class="span10">
    <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-content">
                    <div>
                        <ul class="breadcrumb">
                            <li>
                                <a href="#">Home</a> <span class="divider">/</span>
                            </li>
                            <li>
                                <a href="#">Thêm menu</a>
                            </li>
                        </ul>
                    </div>
                    @using(Html.BeginForm("ThemMoi","AdminMenu",FormMethod.Post))
                    {
                    <div class="form-actions">
                        <input type="submit" name="luu" class="btn btn-primary" value="Lưu và đóng">
                        <a href="~/adminmenu" class="btn btn-inverse">Thoát</a>
                    </div>
                    <div class="row-fluid sortable">
                        <div class="box span12 form-horizontal" style="width: 975px;"> 
                            <br />
                            <div class="control-group">
                                <label class="control-label" for="typeahead">Tên</label>
                                <div class="controls">
                                    <input type="text" name="name"/>
                                    <span class="error"></span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="typeahead">Menu cha</label>
                                <div class="controls">
                                    @Html.DropDownList("IdParentMenu")
                                    @*<span class="error">@Html.ValidationMessageFor(model => model.ParentMenu.ID)</span>*@
                                </div>
                            </div>
                             <div class="control-group">
                                <label class="control-label" for="typeahead">Thứ tự</label>
                                <div class="controls">
                                    <input type="text" name="thutu" value="0"/>
                                    <span class="error">Chỉ nhập số</span>
                                </div>
                            </div>
                            <div class="control-group">
			    <label class="control-label" for="form-field-1">Loại menu</label>
                <div class="controls">
				     <div id="myRadioGroup">
                                        <input type="hidden" id="txtMenuType" name="type" value="1"/>
                                        <script>
                                            function DisplayValueRdb() {
                                                $("#txtMenuType").val($('input[name="MenuType"]:checked').val());
                                            }
                                        </script>
                                        <input type="radio" name="MenuType" checked="checked" value="1" onclick="DisplayValueRdb()" />
                                        <span class="lbl">Single Page Menu</span>
                                        <input type="radio" name="MenuType" value="2" onclick="DisplayValueRdb()" />
                                        <span class="lbl">Category Menu</span>
                                        <input type="radio" name="MenuType" value="3" onclick="DisplayValueRdb()" />
                                        <span class="lbl">Menu Url</span>  
                                        <div id="1" class="desc">
                                            <textarea rows="5" cols="10" id="ckenoidung" name="noidung"></textarea>
                                            <script type="text/javascript">
                                                var ckeditor2 = CKEDITOR.replace("ckenoidung")
                                                ckeditor2.config.width = 700;
                                                ckeditor2.config.height = 300;
                                            </script>
                                        </div>
                                        <div id="2" class="desc">
                                            <table>
                                                <tr>
                                                    <td><label class="control-label" for="form-field-1">Chuyên mục</label></td>
                                                    <td>
                                                        @Html.DropDownList("IdDanhMuc")
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                        <div id="3" class="desc">
                                            <table>
                                                <tr>
                                                    <td><label class="control-label" for="form-field-1">Nhập Url tinh</label></td>
                                                    <td><input type="text" id="txtUrl" name="url" placeholder="" /><br />
                                                        ví dụ: /home, /sanpham
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                    <script type="text/javascript">
                                        $(document).ready(function () {
                                            $("div.desc").hide();
                                            $("#1").show();
                                            $("input[name$='MenuType']").click(function () {
                                                var test = $(this).val();
                                                $("div.desc").hide();
                                                $("#" + test).show();
                                            });
                                        });
                                    </script>
                                </div>
                			</div>
                        </div>
                    </div>
                    }
                </div>
            </div>
    </div>
</div>

