@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Home/_Layout.cshtml";
}
<style>
    .demoHeaders {
        margin-top: 2em;
    }

    #dialog-link {
        padding: .4em 1em .4em 20px;
        text-decoration: none;
        position: relative;
