@model BabyToys.Models.Mail

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div id="content" class="span10">
    <!-- content starts -->
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="#">Home</a> <span class="divider">/</span>
            </li>
            <li>
                <a href="#">Danh sách nick yahoo hỗ trợ trực tuyến</a>
            </li>
        </ul>
    </div>
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-content">
                <div class="row-fluid">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <fieldset>
                            <legend>Thêm nick hỗ trợ trực tuyến</legend>
                            <div class="editor-label">
                                Tên người liên hệ
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Name)
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                            <div class="editor-label">
                                Yahoo
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.MailName)
                                @Html.ValidationMessageFor(model => model.MailName)
                            </div>
                            <div class="editor-label">
                                Số điện thoại
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.PhoneNumber)
                                @Html.ValidationMessageFor(model => model.PhoneNumber)
                            </div>
                            <div class="editor-label">
                                Skype
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Skype)
                                @Html.ValidationMessageFor(model => model.Skype)
                            </div>
                            <p>
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                            </p>
                        </fieldset>
                    }

                    <div>
                        @Html.ActionLink("Trở lại", "Index")
                    </div>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
                </div>
            </div>
        </div>
    </div>
</div>

                    
