@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@model IEnumerable<BabyToys.Models.LoaiKhachHang>

<div id="content" class="span10">
    <!-- content starts -->
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="#">Home</a> <span class="divider">/</span>
            </li>
            <li>
                <a href="#">Danh sách danh mục</a>
            </li>
        </ul>
    </div>
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-content">
                <div class="row-fluid">
                    <div class="span4">
                        <a href="~/Adminkhachhang/themloaikhachhang" class="btn btn-large btn-success">
                            <i class="icon-plus icon-white"></i>
                            Thêm mới
                        </a>
                    </div>
                </div>

            </div>
            <div class="clearfix"></div>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Điểm cần</th>
                        <th>Giảm giá (%)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loaikhachhang in Model)
                    {
                        <tr class="item_row" style="border-color: #F0F0F0; border-style: Solid; height: 40px;">
                            <td class="item_float">@loaikhachhang.IdLoaiKhachHang</td>
                            <td class="item_float">@loaikhachhang.TenLoai</td>
                            <td class="item_float">@loaikhachhang.Diem</td>
                            <td class="item_float">@loaikhachhang.GiamGia</td>
                            <td class="item_float">
                                <a href="~/adminkhachhang/sualoaikhachhang/@loaikhachhang.IdLoaiKhachHang" class="btn btn-info">
                                    <i class="icon-edit icon-white"></i>
                                    Sửa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
