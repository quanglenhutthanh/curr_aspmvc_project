@{
    ViewBag.Title = "Liên hệ của khách hàng";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@model IEnumerable<BabyToys.Models.DanhGia>
<div id="content" class="span10">
    <!-- content starts -->
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="#">Home</a> <span class="divider">/</span>
            </li>
            <li>
                <a href="#">Ý kiến khách hàng đã gửi</a>
            </li>
        </ul>
    </div>
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-content">
                
                    <div class="row-fluid">
                        <div style="float:left;">
                            <a href="~/adminmenu/themmoi" class="btn btn-large btn-success">
                                <i class="icon-plus icon-white"></i>
                                Thêm mới
                            </a>
                        </div>
                        <div style="float:right;margin-right:20px;">
                            
                          </div>
                    </div>
                    <div style="height:10px;"></div>
                        <table class="table table-striped table-bordered bootstrap-datatable datatable">
                            <thead>
                                <tr>
                                    <th>Tên</th>
                                    <th>Email</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.HoTen</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <a href="~/Adminsanpham/chitietlienhe/@item.Id" class="btn btn-info">
                                                <i class="icon-edit icon-white"></i>
                                                Xem chi tiết
                                            </a>
                                        </td>
                                    </tr>
                                    
                                }
                            </tbody>
                        </table>
                    
                
            </div>
        </div>
    </div>
</div>




