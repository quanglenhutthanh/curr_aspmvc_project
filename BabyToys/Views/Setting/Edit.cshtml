@model BabyToys.Models.Setting

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>
<div id="content" class="span10">
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-content">
                <div>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Home</a> <span class="divider">/</span>
                        </li>
                        <li>
                            <a href="#">Thêm menu</a>
                        </li>
                    </ul>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <fieldset>
                        <legend>@Html.LabelFor(model => model.Caption)</legend>
                        <div class="form-actions">
                            <input type="submit" name="luu" class="btn btn-primary" value="Lưu và đóng">
                            @*<input type="submit" name="luu" class="btn btn-success" value="Lưu và tạo mới">*@
                            <a href="~/Setting" class="btn btn-inverse">Thoát</a>
                        </div>
                        @Html.HiddenFor(model => model.Id)

                       
                        <div class="editor-field">
                            @Html.EditorFor(model => model.KeyValue)
                            
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Text)
                        </div>
                        <div class="editor-field">
                            @Html.TextAreaFor(model => model.Text, new { rows = "5", cols = "10", id = "ckemota" })
                            <script type="text/javascript">
                                var ckeditor1 = CKEDITOR.replace("ckemota")
                                ckeditor1.config.width = 700;
                                ckeditor1.config.height = 200;
                            </script>

                            @Html.ValidationMessageFor(model => model.Text)
                        </div>

                       
                        <div class="editor-field">
                            @Html.HiddenFor(model => model.Caption)
                            @Html.ValidationMessageFor(model => model.Caption)
                        </div>

                        <p>
                            <input type="submit" value="Save" />
                        </p>
                    </fieldset>
                }

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
