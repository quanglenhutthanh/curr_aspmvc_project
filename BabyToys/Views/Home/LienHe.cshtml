@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/Home/_Layout.cshtml";
}
<style>
    #message {
        min-height: 94px;
        width: 100%;
        border: 1px solid #cccccc;
        border-radius: 4px;
        color: #555555;
        font-size: 15px;
        font-family: "MyriadPro-Regular";
        box-sizing: border-box;
        padding: 12px;
        margin-bottom: 12px;
    }
</style>
<div class="content">
    <div class="content-left">
        @{Html.RenderAction("ModuleDanhMuc", "Home");}
        <br />
        @{Html.RenderAction("ModuleSanPhamNoiBat", "Home");}
    </div>
    <div class="content-right">
        <fieldset>
    <legend>Liên hệ với chúng tôi</legend>
    @model BabyToys.Models.DanhGia
    <br />
    @using (Html.BeginForm("LienHe", "Home", FormMethod.Post))
    {
        <span class="error" style="font-size:15px;">@ViewBag.Success</span><br />
        <label>Họ tên</label><br />
        @Html.HiddenFor(model => model.IdSanPham)
        @Html.TextBoxFor(model => model.HoTen)
        <span class="error">@Html.ValidationMessageFor(model => model.HoTen)</span>
        <br />
        <label>Email</label><br />
        @Html.TextBoxFor(model => model.Email)
        <span class="error">@Html.ValidationMessageFor(model => model.Email)</span>
        <br />
        <br />
        <label>Nội dung</label>
        @Html.TextAreaFor(model => model.BinhLuan, new { id = "message" })
        <label>Mã xác nhận</label>    
        <span>@CaptchaMvc.HtmlHelpers.CaptchaHelper.Captcha(Html, "", "Nhập mã xác nhận", 5)</span>
        <span class="error">@ViewBag.CaptchaError</span>
        <br />
        <input type="submit" value="Gửi" class="large button input orange" />
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
  

</fieldset>
    </div>
</div>

